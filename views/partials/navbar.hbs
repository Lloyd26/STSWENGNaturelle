<link rel="stylesheet" href="/css/navbar.css">
<script type="module" src="/js/navbar.js"></script>

<nav class="navbar navbar-dark navbar-expand-xl sticky-top" id="header">
    <div class="container-fluid">
        <a href="/" class="navbar-brand">
            <img id="salon-logo" src="/assets/images/salon-logo.png">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav">
                <li class="nav-item{{#if active.home}} active{{/if}}" id="home-bt">
                    <a href="/" class="nav-link">Home</a>
                </li>
                <li class="nav-item{{#if active.about}} active{{/if}}" id="about-bt">
                    <a href="/about" class="nav-link">About</a>
                </li>
                <li class="nav-item dropdown{{#if active.services}} active{{/if}}" id="services-bt">
                    <a href="" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"
                        id="service-dropdown-bt">Services</a>
                    <ul class="dropdown-menu" id="services-dropdown-menu">
                    </ul>
                </li>
                <li class="nav-item{{#if active.reservation}} active{{/if}}">
                    <a href="/reservation" class="nav-link">Reservation</a>
                </li>
                </li>
                <li class="nav-item{{#if active.faq}} active{{/if}}" id="faq-bt">
                    <a href="/faq" class="nav-link">FAQ</a>
                </li>
            </ul>
        </div>
        {{#if (isDefined logged_in)}}
        {{#if (isEqual logged_in.type "customer")}}
        <div id="nav-right-side">
            <div class="dropdown">
                <div class="dropdown-toggle" id="nav-notifications" data-bs-toggle="dropdown">
                    <span class="fa-layers fa-fw">
                        <i class="fa fa-bell fa-stack-2x"></i>
                        <i class="fa fa-circle fa-stack-1x fa-xs" id="read-indicator-on-btn"></i>
                    </span>
                    <ul class="dropdown-menu w-100 dropdown-menu-end" id="notification-dropdown-menu">
                    </ul>
                </div>
            </div>
            <div class="dropdown">
                <div class="dropdown-toggle" id="nav-user" data-bs-toggle="dropdown"><i
                    class="fa fa-user-circle"></i>{{logged_in.user.firstName}}</div>
                <ul class="dropdown-menu w-100" id="user-dropdown-menu">
                    <li><a href="/reserveinfo" class="dropdown-item">My Reservations</a></li>
                    <li><a href="/logout" class="dropdown-item w-100 h-100" id="log-out-bt">Log Out</a></li>
                </ul>
            </div>
        </div>
        {{else}}
        <a class="btn{{#if active.login}} active{{/if}}" id="btn-login" href="/login">LOG IN</a>
        {{/if}}
        {{else}}
        <a class="btn{{#if active.login}} active{{/if}}" id="btn-login" href="/login">LOG IN</a>
        {{/if}}
    </div>
</nav>

<!--Notification Details Modal-->

<div class="modal fade" id="notif-details-modal" tabindex="-1" aria-labelledby="notif-details-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="notif-details-modal-content">
            <div class="modal-header notif-details-modal-header">
                <h5 class="modal-title">Notification Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-text" id="modal-notif-title"></div>
                <div id="modal-notif-details-container">
                    <div class="modal-text" id="modal-notif-body"></div>
                    <div id="modal-reservation-details-container-notif"></div>
                    <div id="modal-notif-timestamp-container">Received <span id="modal-notif-timestamp"></span></div>
                </div>
            </div>
        </div>
    </div>
</div>