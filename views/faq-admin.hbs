<link rel="stylesheet" href="/css/faq-admin.css">
<script type="module" src="/js/faq-admin.js"></script>

<div id="faq-admin-wrapper" class="bg-noise-pattern">
    <div id="faq-admin-header-container">
        <h2 id="faq-admin-header">Frequently Asked Questions</h2>
        <button type="button" id="add-btn" data-bs-toggle="modal" data-bs-target="#add-faq-modal"><i class="fa fa-plus"></i>Add</button>
    </div>
    <div id="faq-collection-container">
    </div>
</div>

<!-- Add Modal-->
<div class="modal fade modal-lg" id="add-faq-modal" tabindex="-1" aria-labelledby="add-faq-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add FAQ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="form-add-faq">
                <div class="modal-body">
                    <div class="col mb-3">
                        <label class="form-label" for="input-question">Question</label>
                        <input class="form-control" id="input-question" name="question" type="text">
                    </div>
                    <div class="col mb-4">
                        <label class="form-label" for="input-answer">Answer</label>
                        <textarea class="form-control" id="input-answer" name="answer"></textarea>
                    </div>
                    <div class="error-msg" id="add-faq-error-msg" data-error-status="normal"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="save-btn" id="add-faq-btn">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal-->
<div class="modal fade modal-lg" id="edit-faq-modal" tabindex="-1" aria-labelledby="edit-faq-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit FAQ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="form-edit-faq">
                <input type="hidden" id="edit-input-faq-id" name="edit-faq-id">
                <div class="modal-body">
                    <div class="col mb-3">
                        <label class="form-label" for="edit-input-question">Question</label>
                        <input class="form-control" id="edit-input-question" name="question" type="text">
                    </div>
                    <div class="col mb-4">
                        <label class="form-label" for="edit-input-answer">Answer</label>
                        <textarea class="form-control" id="edit-input-answer" name="answer"></textarea>
                    </div>
                    <div class="error-msg" id="edit-faq-error-msg" data-error-status="normal"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="save-btn" id="edit-faq-btn">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal-->
<div class="modal fade" id="delete-faq-modal" tabindex="-1" aria-labelledby="delete-faq-modal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" id="delete-modal-content">
            <div class="modal-header delete-modal-header">
                <h5 class="modal-title">Delete FAQ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="delete-input-faq-id" name="delete-faq-id">
                <div class="modal-text">Are you sure you want to delete this FAQ?</div>
                <div class="modal-text" id="delete-question"></div>
                <div class="modal-text" id="delete-answer"></div>
                <div class="error-msg" id="delete-faq-error-msg" data-error-status="normal"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="save-btn" id="delete-faq-btn"><i class="fa fa-trash-can"></i>Delete</button>
            </div>
        </div>
    </div>
</div>