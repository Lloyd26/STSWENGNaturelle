<link rel="stylesheet" href="/css/login-employee.css">
<script type="module" src="/js/auth.js"></script>

<div id="form-wrapper">
    <form id="form-login-admin" class="form-container" method="post">
        <div id="salon-title-login">Salon</br>Naturelle</div>
        <h2 id="form-header">Employee Login</h2>
        <div class="mb-3">
            <input class="form-control form-control-lg" id="input-email" name="email" type="text" placeholder="Email"{{#if (isDefined logged_in)}}{{#unless (isEqual logged_in.type "employee")}} disabled{{/unless}}{{/if}}>
        </div>
        <div class="mb-3">
            <input class="form-control form-control-lg" id="input-password" name="password" type="password" placeholder="Password"{{#if (isDefined logged_in)}}{{#unless (isEqual logged_in.type "employee")}} disabled{{/unless}}{{/if}}>
        </div>
        <div class="error-msg" id="login-admin-error-msg" data-error-status="{{#if (isDefined error)}}error{{else}}normal{{/if}}">{{error}}</div>
        <div id="last-row">
            <a href="/" id="form-switch-link">Go Back To Customer View</a>
            <button class="btn" id="btn-submit" type="submit"{{#if (isDefined logged_in)}}{{#unless (isEqual logged_in.type "employee")}} disabled{{/unless}}{{/if}}>Log In</button>
        </div>
    </form>
</div>