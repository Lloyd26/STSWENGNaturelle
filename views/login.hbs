<link rel="stylesheet" href="css/login.css">
<script type="module" src="/js/auth.js"></script>

<div id="form-wrapper">
    <form id="form-login" class="form-container" method="post">
        <h2 id="form-header">Welcome back!</h2>
        <div class="mb-3">
        <input class="form-control form-control-lg" id="input-email" name="email" type="email" placeholder="Email Address"{{#if (isDefined logged_in)}}{{#unless (isEqual logged_in.type "customer")}} disabled{{/unless}}{{/if}}>
        </div>
        <div class="mb-3">
            <input class="form-control form-control-lg" id="input-password" name="password" type="password" placeholder="Password"{{#if (isDefined logged_in)}}{{#unless (isEqual logged_in.type "customer")}} disabled{{/unless}}{{/if}}>
        </div>
        <div class="error-msg" id="login-error-msg" data-error-status="{{#if (isDefined error)}}error{{else}}normal{{/if}}">{{error}}</div>
        <div id="last-row">
            <a href="/register" id="form-switch-link">Create an Account</a>
            <button class="btn" id="btn-submit" type="submit">Log In</button>
        </div>
    </form>
</div>