<link rel="stylesheet" href="/css/form.css">
<link rel="stylesheet" href="/css/bs-form-override.css">
<link rel="stylesheet" href="/css/modal.css">
<link rel="stylesheet" href="/css/admin-employees.css">
<script type="module" src="/js/admin-employees.js"></script>

<div class="admin-wrapper bg-noise-pattern">
    <div class="admin-header-container">
        <h2 class="admin-header">Employees</h2>
    </div>
    <div class="admin-container container-bottom">
        <div id="admin-employees-container-header">
            <input type="search" placeholder="Search" class="form-control form-control-lg" id="input-employee-search">
            <button class="btn" id="btn-employee-add" data-bs-toggle="modal" data-bs-target="#modal-employee-add"><i class="fa fa-plus"></i>Add</button>
        </div>
        <div id="admin-employees-wrapper">
        </div>
    </div>
</div>

<div class="modal modal-md fade" id="modal-employee-add">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form-employee-add">
                    <div class="row mb-3">
                        <div class="col">
                            <label for="input-add-employee-fname" class="form-label">First Name</label>
                            <input type="text" id="input-add-employee-fname" name="employee_fname" class="form-control">
                        </div>
                        <div class="col">
                            <label for="input-add-employee-lname" class="form-label">Last Name</label>
                            <input type="text" id="input-add-employee-lname" name="employee_lname" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="input-add-employee-email" class="form-label">Email Address</label>
                        <input type="email" id="input-add-employee-email" name="employee_email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="input-add-employee-contact" class="form-label">Contact Number</label>
                        <input type="tel" id="input-add-employee-contact" name="employee_contact" class="form-control">
                    </div>
                    <div class="error-msg" id="form-employee-add-error" data-error-status="normal"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-discard" data-bs-dismiss="modal"><i class="fa fa-trash"></i>Discard</button>
                <button type="submit" class="btn btn-modal-success" form="form-employee-add"><i class="fa fa-plus"></i>Add</button>
            </div>
        </div>
    </div>
</div>

<div class="modal modal-md fade" id="modal-employee-edit">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form-employee-edit">
                    <input type="hidden" id="input-edit-employee-id" name="employee_id">
                    <div class="row mb-3">
                        <div class="col">
                            <label for="input-edit-employee-fname" class="form-label">First Name</label>
                            <input type="text" id="input-edit-employee-fname" name="employee_fname" class="form-control">
                        </div>
                        <div class="col">
                            <label for="input-edit-employee-lname" class="form-label">Last Name</label>
                            <input type="text" id="input-edit-employee-lname" name="employee_lname" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="input-edit-employee-email" class="form-label">Email Address</label>
                        <input type="email" id="input-edit-employee-email" name="employee_email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="input-edit-employee-contact" class="form-label">Contact Number</label>
                        <input type="tel" id="input-edit-employee-contact" name="employee_contact" class="form-control">
                    </div>
                    <div class="error-msg" id="form-employee-edit-error" data-error-status="normal"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-discard" data-bs-dismiss="modal"><i class="fa fa-trash"></i>Discard</button>
                <button type="submit" class="btn btn-modal-success" form="form-employee-edit"><i class="fa fa-check"></i>Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal modal-md fade" id="modal-employee-delete">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this employee?</p>
                <div id="modal-delete-details-container">
                    <input type="hidden" id="input-delete-employee-id" name="employee_id">
                    <label for="input-delete-fname">First Name</label>
                    <input type="text" readonly id="input-delete-employee-fname" class="form-control-plaintext">
                    <label for="input-delete-lname">Last Name</label>
                    <input type="text" readonly id="input-delete-employee-lname" class="form-control-plaintext">
                    <label for="input-delete-email">Email Address</label>
                    <input type="text" readonly id="input-delete-employee-email" class="form-control-plaintext">
                    <label for="input-delete-contact">Contact Number</label>
                    <input type="text" readonly id="input-delete-employee-contact" class="form-control-plaintext">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-neutral" data-bs-dismiss="modal"><i class="fa fa-xmark"></i>Cancel</button>
                <button type="button" class="btn btn-delete"><i class="fa fa-trash"></i>Delete</button>
            </div>
        </div>
    </div>
</div>