        <div class="employee-header-container">
            <h2 class="employee-header">Reservations</h2>
            <div hidden id="employee-id" data-employee-id = "{{logged_in.user.employee_id}}"></div>
        </div>
    </div>
    <div class="employee-container">
        <div id="employee-reservations-container">
